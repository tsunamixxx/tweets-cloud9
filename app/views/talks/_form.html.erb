<div class="container-fluid">
<p class="alert"><%= notice %></p>

<%= form_for(@talk, url: choose_new_or_edit) do |f| %>
    <% if @talk.errors.any? %>
        <div class= "error_explanation">
            <h2><%= @talk.errors.count %>件のエラーがあります</h2>
            <ul>
                <% @talk.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-10">
            <div class="form-group">
            <%= f.label :content %>
            <%= f.text_field :content, class: 'form-control' %>
            </div>
        </div>
    </div>
    <div class="center mb-20">
        <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>
    <div class="center">
        <%= link_to "一覧ページへ戻る", talks_path, class: 'btn btn-primary' %>
    </div>
</div>